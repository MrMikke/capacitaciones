<odoo>
    <data>
        <!-- VISTA TREE -->
        <record model="ir.ui.view" id="cvp.peliculas_tree">
            <field name="name">cvp peliculas tree</field>
            <field name="model">cvp.peliculas</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="titulo"/>
                    <field name="fecha_lanzamiento"/>
                    <field name="director"/>
                    <field name="studio"/>
                </tree>
            </field>
        </record>
        <!-- VISTA FORM -->
        <record model="ir.ui.view" id="cvp.peliculas_form">
            <field name="name">cvp peliculas form</field>
            <field name="model">cvp.peliculas</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <label for="titulo" string="Titulo"/>
                        <field name="titulo" string="Titulo"/><br/>
                        <label for="imagen_pelicula" string="Portada"/>
                        <field name="imagen_pelicula" string="Portada"/><br/>
                        <label for="fecha_lanzamiento" string="Fecha de lanzamiento"/>
                        <field name="fecha_lanzamiento" string="fecha_lanzamiento"/><br/>
                        <label for="longitud_minutos" string="longitud_minutos"/>
                        <field name="longitud_minutos" string="longitud_minutos"/><br/>
                        <label for="actores_contactos" string="Actores"/>
                        <field name="actores_contactos" string="Actores"/><br/>
                        <label for="studio" string="Estudio"/>
                        <field name="studio" string="Estudio"/><br/>
                        <label for="director" string="Director"/>
                        <field name="director" string="Director"/><br/>
                        <label for="producto_asociado" string="Producto"/>
                        <field name="producto_asociado" string="Producto"/><br/>
                        <label for="sinopsis" string="Sinopsis"/>
                        <field name="sinopsis" string="Sinopsis"/><br/>
                        <label for="costo_pelicula" string="Costo de pelicula"/>
                        <field name="costo_pelicula" string="Costo de pelicula"/><br/>
                        <label for="iva" string="Iva"/>
                        <field name="iva" string="Iva"/><br/>
                        <label for="total" string="Total"/>
                        <field name="total" string="Total"/>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>