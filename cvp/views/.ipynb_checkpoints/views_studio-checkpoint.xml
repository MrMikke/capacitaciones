<odoo>
  <data>
          <record model="ir.ui.view" id="form_cvp_studio">
          <field name="name">cvp studio tree</field>
          <field name="model">cvp.studio</field>
          <field name="arch" type="xml">
            <form>
              <sheet>
                  <label for="nombre_studio" string="Nombre del studio"/>
                  <field name="nombre_studio" /><br/>
                  <label for="peliculas" string="Peliculas asociadas"/>
                  <field name="peliculas" widget="many2many"/><br/>
<!--                   <label for="descripcion" string="Nombre de la descripcion"/>
                  <field name="descripcion" /><br/> -->
              </sheet>
          </form>
        </field>
      </record>
      
      <record model="ir.actions.act_window" id="cvp.action_studio">
          <field name="name">cvp studio</field>
          <field name="res_model">cvp.studio</field>
          <field name="view_mode">tree,form</field>
      </record>
      
      <menuitem name="Studio" id="cvp.studio" parent="cvp.menu_root"
                action="cvp.action_studio"/>

      
  </data>
</odoo>