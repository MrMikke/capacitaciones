<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="cvp.list">
      <field name="name">cvp list</field>
      <field name="model">cvp.cvp</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
      
    <record model="ir.ui.view" id="form_cvp_peliculas">
      <field name="name">cvp peliculas tree</field>
      <field name="model">cvp.peliculas</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <label for="titulo" string="Título"/>
                <field name="titulo" /><br/>
                <label for="imagen_pelicula" string="Imagen de la película"/>
                <field name="imagen_pelicula" /><br/>
                <label for="sinopsis" string="Sinopsis"/>
                <field name="sinopsis" /><br/>
                <label for="fecha_lanzamiento" string="Fecha de lanzamiento"/>
                <field name="fecha_lanzamiento" options="{'datepicker':{'maxDate': 'now'}}"/><br/>
                <label for="longitud_minutos" string="Duración de la película [en minutos]"/>
                <field name="longitud_minutos"/><br/>
                <label for="director" string="Director"/>
                <field name="director"/><br/>
                <label for="actores" string="Actores"/>
                <field name="actores" widget="many2many"/><br/>
                <label for="producto_asociado" string="Producto asociado a la película"/>
                <field name="producto_asociado"/><br/>
                <label for="costo_pelicula" string="Costo de la película"/>
<!--                 <label string="$"></label> -->
                <field name="costo_pelicula" /><br/>
                <label for="iva" string="IVA (%)"/>
                <field name="iva" /><br/>
                <label for="total" string="Total"/>
<!--                 <label string="$"></label> -->
                <field name="total" />
            </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="cvp.action_window">
      <field name="name">cvp window</field>
      <field name="res_model">cvp.cvp</field>
      <field name="view_mode">tree,form</field>
    </record>
      
    <record model="ir.actions.act_window" id="cvp.action_peliculas">
      <field name="name">cvp peliculas</field>
      <field name="res_model">cvp.peliculas</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="cvp.action_server">
      <field name="name">cvp server</field>
      <field name="model_id" ref="model_cvp_cvp"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="cvp" id="cvp.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="cvp.menu_1" parent="cvp.menu_root"/>
    <menuitem name="Menu 2" id="cvp.menu_2" parent="cvp.menu_root"/>
    <menuitem name="Películas" id="cvp.peliculas" parent="cvp.menu_root"
                action="cvp.action_peliculas"/>

    <!-- actions -->

    <menuitem name="List" id="cvp.menu_1_list" parent="cvp.menu_1"
              action="cvp.action_window"/>
    <menuitem name="Server to list" id="cvp" parent="cvp.menu_2"
              action="cvp.action_server"/>

  </data>
</odoo>