<odoo>
    <data>
        <report id="cvp_wizard_generos_report"
                model="cvp.wizard_generos"
                string="Wizard generos"
                report_type="qweb-pdf"
                name="cvp.cvp_wizard_generos"
                file="cvp.cvp_wizard_generos_report"
                attachment_use="True"
                print_report_name="(object.id)"
                paperformat="base.paperformat_us" />

        <template id="cvp_wizard_generos">
            <t t-call="web.html_container">
                <div style="text-align:center;">
                    <t t-foreach="docs" t-as="doc">
                        <div class="header" style="text-align: center;">
                            <br/>
                            <br/>
                            <br/>
                            <span>
                                REPORTE DE GENEROS
                            </span>
                            <br/>
                            <br/>
                        </div>
                        <!-- TODOS LOS GENEROS EXISTENTES -->
                        <table border="1" style="margin: 0 auto; border: 2px black solid;">
                            <tr>
                                <th height="50" width="800" colspan="4">
                                    <span>Listado de g√©neros existentes</span>
                                </th>
                            </tr>
                            
                            <tr>
                                <td height="50" style="text-align: center;">
                                    <t t-foreach="doc.todos_los_generos" t-as="genero_actual">
                                        <t t-esc="genero_actual.name"/><br/>
                                    </t>
                                </td>
                            </tr>
                        </table>
                        <br/>
                        <br/>
                        
                        <t t-if="doc.solo_generos == False">
                            <!-- RELACION GENEROS - PELICULAS -->
                            <t t-foreach="doc.todos_los_generos" t-as="genero_actual">
                                <table border="1" style="margin: 0 auto;">
                                    <tr>
                                        <th height="50" width="100%" colspan="4">
                                            <t t-esc="genero_actual.name"/>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td min-height="100" width="600" style="text-align: center;">
                                            <t t-foreach="genero_actual.peliculas" t-as="pelicula">
                                                <br/><t t-esc="pelicula.name"/><br/>
                                            </t>
                                            <br/>
                                        </td>
                                    </tr>
                                </table>
                                <br/>
                                <br/>
                                <br/>
                            </t>
                        </t>
                        <t t-else=""></t>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>