<odoo>
    <data>
        <report id="cvp_wizard_generos_report"
                model="cvp.wizard_generos"
                string="Wizard generos"
                report_type="qweb-pdf"
                name="cvp.cvp_wizard_generos"
                file="cvp.cvp_wizard_generos_report"
                attachment_use="True"
                print_report_name="(object.id)"
                paperformat="base.paperformat_us" />

        <template id="cvp_wizard_generos">
            <t t-call="web.html_container">
                <div style="text-align:center;">
                    <t t-foreach="docs" t-as="doc">
                        <div class="header" style="text-align: center;">
                            <br/>
                            <br/>
                            <br/>
                            <span>
                                REPORTE DE GENEROS
                            </span>
                            <br/>
                            <br/>
                            <br/>
                        </div>
                        <span>Listado de géneros existentes</span><br/>
                        <t t-foreach="doc.todos_los_generos" t-as="genero_actual">
                            <b><t t-esc="genero_actual.genero"/></b><br/>
                        </t>

                        <table border="1" style="margin: 0 auto;">
                            <tr>
                                <th height="50" width="100%" colspan="4">
                                    <span>Genero 1</span>
                                </th>
                            </tr>

                            <tr>
                                <td height="50" width="200" style="text-align: center;">
                                    Fecha de lanzamiento<br/>
                                </td>
                                <td height="50" width="200" style="text-align: center;">
                                    Duración<br/>
                                </td>
                                <td height="50" width="200" style="text-align: center;">
                                    Genero<br/>
                                </td>
                            </tr>

                        </table>
                        <br/>
                        <br/>
                        <br/>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>