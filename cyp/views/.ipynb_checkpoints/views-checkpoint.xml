<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="cyp.list">
      <field name="name">cyp list</field>
      <field name="model">cyp.cyp</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
      
    <record model="ir.ui.view" id="cyp.triangulos_tree">
      <field name="name">cyp triangulos tree</field>
      <field name="model">cyp.triangulos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="base"/>
          <field name="total"/>
          <field name="altura"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="cyp.figuras_tree">
      <field name="name">cyp figuras tree</field>
      <field name="model">cyp.figuras</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="figura"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="form_const_contrato_pagos">
        <field name="name">cyp figuras form</field>
        <field name="model">cyp.figuras</field>
        <field name="arch" type="xml">
            <form>
                <label for="name" string="nombre"/>
                <field name="name"/>
                <label for="figura" string="triangulos one2many"/>
                <field name="figura" />
                <label for="figura1" string="triangulos many2one"/>
                <field name="figura1"/>
                
            </form>
        </field>
    </record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="cyp.action_window">
      <field name="name">cyp window</field>
      <field name="res_model">cyp.cyp</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <record model="ir.actions.act_window" id="cyp.triang">
      <field name="name">TRIANGULOS</field>
      <field name="res_model">cyp.triangulos</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="cyp.fig">
      <field name="name">FIGURAS</field>
      <field name="res_model">cyp.figuras</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="cyp.action_server">
      <field name="name">cyp server</field>
      <field name="model_id" ref="model_cyp_cyp"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="cyp" id="cyp.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="cyp.menu_1" parent="cyp.menu_root"/>
    <menuitem name="Menu 2" id="cyp.menu_2" parent="cyp.menu_root"/>
     <menuitem name="FIGURAS" id="cyp.menu_3" parent="cyp.menu_root"
               action="cyp.fig"/> 
    <menuitem name="Triangulo" id="cyp.menu_triangulos" parent="cyp.menu_root"/>
    <!-- actions -->

    <menuitem name="List" id="cyp.menu_1_list" parent="cyp.menu_1"
              action="cyp.action_window"/>
    <menuitem name="Server to list" id="cyp" parent="cyp.menu_2"
              action="cyp.action_server"/>
     <menuitem name="Calculo" id="triangulos_calculos" parent="cyp.menu_triangulos" 
               action="cyp.triang"/>

      
  </data>
</odoo>