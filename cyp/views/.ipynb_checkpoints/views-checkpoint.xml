<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="cyp.list">
      <field name="name">cyp list</field>
      <field name="model">cyp.cyp</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
      
    <record model="ir.ui.view" id="form_cyp_alumnos">
        <field name="name">cyp alumnos form</field>
        <field name="model">cyp.alumnos</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" name="boton_consulta" string="CLICKEA PARA IMPRIMIR CONSULTA"/>
                </header>
                <label for="name" string="nombre"/>
                <field name="name"/><br/>
                <label for="alumnos" string="alumnos"/>
                <field name="alumnos" widget="many2many"/><br/>
                <label for="alumnos2" string="alumnos many2one"/>
                <field name="alumnos2"/><br/>
                <label for="alumnos3" string="alumnos many2many"/>
                <field name="alumnos3"/><br/>
                <label for="recursador" string="¿ERES UN RECURSADOR?"/>
                <field name="recursador"/><br/>
            </form>
        </field>
    </record>
      
    <record model="ir.ui.view" id="form_cyp_materias">
        <field name="name">cyp materias form</field>
        <field name="model">cyp.materias</field>
        <field name="arch" type="xml">
            <form>
                <label for="name" string="nombre"/>
                <field name="name"/><br/>
                <label for="alumno" string="alumnos one2many"/>
                <field name="alumno" widget="many2many"/><br/>
            </form>
        </field>
    </record>
      
    <record model="ir.ui.view" id="form_cyp_libreria">
        <field name="name">cyp libreria form</field>
        <field name="model">cyp.libreria</field>
        <field name="arch" type="xml">
            <form>
                <label for="name_libreria" string="Nombre de la librería"/>
                <field name="name_libreria"/><br/>
                <label for="name_encargado" string="Nombre del encargado de la librería"/>
                <field name="name_encargado"/><br/>
                <label for="libros" string="Libros"/>
                <field name="libros" widget="many2many"/><br/>
            </form>
        </field>
    </record>
      
    <record model="ir.ui.view" id="form_cyp_libros">
        <field name="name">cyp libros form</field>
        <field name="model">cyp.libros</field>
        <field name="arch" type="xml">
            <form>
                <label for="name_libro" string="Nombre del libro"/>
                <field name="name_libro"/><br/>
                <label for="name_autor" string="Nombre del autor"/>
                <field name="name_autor"/><br/>
                <label for="numero_paginas" string="Número de páginas"/>
                <field name="numero_paginas"/><br/>
                <label for="promedio_paginas" string="Número promedio de páginas"/>
                <field name="promedio_paginas"/><br/>
                <label for="disponible_prestamo" string="¿Está disponible para préstamo?"/>
                <field name="disponible_prestamo"/><br/>
                <button type="object" name="boton_prestamo_true" string="Marcar disponible"/>
                <button type="object" name="boton_prestamo_false" string="Marcar como no disponible"/><br/>
                <label for="aplicando_herencia" string="Aplicando herencia"/>
                <field name="aplicando_herencia"/><br/><br/>
            </form>
        </field>
    </record>
      
    <record id="view_cyp_report_wizard" model="ir.ui.view">
            <field name="name">cyp Report</field>
            <field name="model">cyp.report</field>
            <field name="arch" type="xml">
                <form string="Choose The Details">
                    <group>
                        <group>
                            <field name="date_from" />
                            <field name="date_to"/>
                        </group>
                    </group>
                    <footer>
                        <button name="cyp.report" string="Print" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="cyp.action_window">
      <field name="name">cyp window</field>
      <field name="res_model">cyp.cyp</field>
      <field name="view_mode">tree,form</field>
    </record>
      
    <record model="ir.actions.act_window" id="cyp.action_materias">
      <field name="name">cyp materias window</field>
      <field name="res_model">cyp.materias</field>
      <field name="view_mode">tree,form</field>
    </record>
      
    <record model="ir.actions.act_window" id="cyp.action_alumnos">
      <field name="name">cyp alumnos window</field>
      <field name="res_model">cyp.alumnos</field>
      <field name="view_mode">tree,form</field>
    </record>
      
    <record model="ir.actions.act_window" id="cyp.action_libreria">
      <field name="name">cyp libreria window</field>
      <field name="res_model">cyp.libreria</field>
      <field name="view_mode">tree,form</field>
    </record>
      
    <record model="ir.actions.act_window" id="cyp.action_libros">
      <field name="name">cyp libros window</field>
      <field name="res_model">cyp.libros</field>
      <field name="view_mode">tree,form</field>
    </record>
      
    <record model="ir.actions.act_window" id="cyp.action_report">
      <field name="name">cyp Report</field>
      <field name="res_model">cyp.report</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="cyp.action_server">
      <field name="name">cyp server</field>
      <field name="model_id" ref="model_cyp_cyp"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="cyp" id="cyp.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="cyp.menu_1" parent="cyp.menu_root"/>
    <menuitem name="Menu 2" id="cyp.menu_2" parent="cyp.menu_root"/>
    <menuitem name="MATERIAS" id="cyp.materias" parent="cyp.menu_root"/>
    <menuitem name="ALUMNOS" id="cyp.alumnos" parent="cyp.menu_root"
                action="cyp.action_alumnos"/>
    <menuitem name="Biblioteca" id="cyp.biblioteca" parent="cyp.menu_root"/>
    <menuitem name="cyp Report" id="cyp.report" parent="cyp.menu_root"
                action="cyp.action_report"/>

    <!-- actions -->

    <menuitem name="List" id="cyp.menu_1_list" parent="cyp.menu_1"
              action="cyp.action_window"/>
    <menuitem name="Server to list" id="cyp" parent="cyp.menu_2"
              action="cyp.action_server"/>
    <menuitem name="IR AL TREE DE MATERIAS" id="cyp.sub_menu_materias1" parent="cyp.materias"
              action="cyp.action_materias"/>
    <menuitem name="Librería" id="cyp.sub_menu_libreria" parent="cyp.biblioteca"
              action="cyp.action_libreria"/>
    <menuitem name="Libros" id="cyp.sub_menu_libros" parent="cyp.biblioteca"
              action="cyp.action_libros"/>

  </data>
</odoo>