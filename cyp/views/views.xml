<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="cyp.list">
      <field name="name">cyp list</field>
      <field name="model">cyp.cyp</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
      
    <record id="act_cyp_alumno_2_cyp_materias" model="ir.actions.act_window">
      <field name="name">Materias</field>
      <field name="res_model">cyp.materias</field>
      <field name="view_mode">tree,form</field>
      <field name="context">
        {
          'search_default_alumno': active_id, 
          'default_alumno': active_id,
        }
      </field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          No hay materias para este alumno aún...
        </p>
      </field>
    </record>
      
      
    <record model="ir.ui.view" id="form_cyp_alumnos">
        <field name="name">cyp alumnos form</field>
        <field name="model">cyp.alumnos</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="estatus" widget="statusbar"/>
                </header>
                <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="%(cyp.act_cyp_alumno_2_cyp_materias)d" type="action" icon="fa-book"  groups="cyp.admin_cyp_group">
                                <field string="Materias" name="cyp_materias_count" widget="statinfo"/>
                            </button>
                        </div>
                    
                            <label for="name" string="nombre" attrs="{'invisible':[('name','=','HUGO')]}"/>/>
                            <field name="name" attrs="{'invisible':[('name','=','HUGO')]}"/><br/>
                            <label for="alumnos" string="ALUMNOS"/>
                            <field name="alumnos"  widget="many2many" /><br/> <!-- domain="[('id','!=','1')]" -->
        <!--                     <label for="alumnos2" string="Alumno many2one"/>
                            <field name="alumnos2"/><br/>
                            <label for="alumnos3" string="Alumno many2many"/>
                            <field name="alumnos3"/><br/> -->
                            <label for="recursador" string="¿ES UN RECURSADOR?"/>
                            <field name="recursador"/><br/>
                        <notebook>
                            <page string="Pestaña 1" id="page_1">
                                <p>ESTA EN LA PESTAÑA 1</p>
                            </page>
                            <page string="Pestaña 2">
                                <p>ESTA EN LA PESTAÑA 2</p>
                            </page>
                        </notebook>
               </sheet>
            </form>
        </field>
    </record>
      
    <record id="search_cyp_materias" model="ir.ui.view">
      <field name="name">Search cyp materias</field>
      <field name="model">cyp.materias</field>
      <field name="arch" type="xml">
        <search string="Search">
          <field name="alumno" string="Alumno"/>
            
        </search>
      </field>
    </record>
    <!-- FIN SEARCH -->
     <record model="ir.ui.view" id="form_cyp_materias">
        <field name="name">cyp materias form</field>
        <field name="model">cyp.materias</field>
        <field name="arch" type="xml">
            <form>
                
                <label for="name" string="nombre"/>
                <field name="name"/><br/>
                <label for="alumno" string="Alumno one2many"/>
                <field name="alumno" widget="many2many"/><br/>
                
                
            </form>
        </field>
    </record>
      
    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="cyp.action_window">
      <field name="name">cyp window</field>
      <field name="res_model">cyp.cyp</field>
      <field name="view_mode">tree,form</field>
    </record>
      
     <record model="ir.actions.act_window" id="cyp.action_materias">
      <field name="name">cyp materias window</field>
      <field name="res_model">cyp.materias</field>
      <field name="view_mode">tree,form</field>
    </record>
      
    <record model="ir.actions.act_window" id="cyp.action_alumnos">
      <field name="name">cyp alumnas window</field>
      <field name="res_model">cyp.alumnos</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="cyp.action_server">
      <field name="name">cyp server</field>
      <field name="model_id" ref="model_cyp_cyp"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="cyp" id="cyp.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="cyp.menu_1" parent="cyp.menu_root"/>
    <menuitem name="Menu 2" id="cyp.menu_2" parent="cyp.menu_root"/>
    <menuitem name="MATERIAS" id="cyp.materias" parent="cyp.menu_root"/>
    <menuitem name="ALUMNOS" id="cyp.alumnos" parent="cyp.menu_root"
              action="cyp.action_alumnos"/>

    <!-- actions -->

    <menuitem name="List" id="cyp.menu_1_list" parent="cyp.menu_1"
              action="cyp.action_window"/>
    <menuitem name="Server to list" id="cyp" parent="cyp.menu_2"
              action="cyp.action_server"/>
    <menuitem name="IR AL TREE DE MATERIAS" id="cyp.sub_menu_materias1" parent="cyp.materias"
              action="cyp.action_materias"/>

  </data>
</odoo>